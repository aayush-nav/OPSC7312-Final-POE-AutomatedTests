<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".DailyMealsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5883F"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/dailyMeals_back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/back_arrow"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/dailyMeals_heading_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:text="@string/daily_meals"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <!-- Previous Week Button -->
        <ImageButton
            android:id="@+id/dailyMeals_previousWeek_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:contentDescription="@string/previous_week"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Week Text -->
        <TextView
            android:id="@+id/dailyMeals_currentWeek_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_range"
            android:textSize="20sp"
            android:layout_marginHorizontal="8dp"
            android:textStyle="bold" />

        <!-- Next Week Button -->
        <ImageButton
            android:id="@+id/dailyMeals_nextWeek_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_arrow_forward_24"
            android:contentDescription="@string/next_week"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <!-- Days of the Week -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:id="@+id/dailyMeals_sunday_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/dailyMeals_sunday_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sunday"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyMeals_sundayNumber_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dailyMeals_monday_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/dailyMeals_monday_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monday"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyMeals_mondayNumber_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dailyMeals_tuesday_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/dailyMeals_tuesday_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tuesday"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyMeals_tuesdayNumber_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dailyMeals_wednesday_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/dailyMeals_wednesday_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wednesday"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyMeals_wednesdayNumber_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dailyMeals_thursday_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/dailyMeals_thursday_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thursday"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyMeals_thursdayNumber_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dailyMeals_friday_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/dailyMeals_friday_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friday"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyMeals_fridayNumber_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dailyMeals_saturday_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/dailyMeals_saturday_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saturday"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyMeals_saturdayNumber_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/input_text_background"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center">

        <TextView
            android:id="@+id/dailyMeals_breakfast_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="@string/breakfast"
            android:textColor="@color/textColorDefault"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dailyMeals_breakfast_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#37F269"
            android:text="@string/add"
            android:enabled="false"
            android:textColor="#000000"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/input_text_background"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center">

        <TextView
            android:id="@+id/dailyMeals_lunch_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="@string/lunch"
            android:textColor="@color/textColorDefault"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dailyMeals_lunch_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#37F269"
            android:text="@string/add"
            android:enabled="false"
            android:textColor="#000000"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/input_text_background"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center">

        <TextView
            android:id="@+id/dailyMeals_snack_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="@string/snack"
            android:textColor="@color/textColorDefault"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dailyMeals_snack_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#37F269"
            android:text="@string/add"
            android:enabled="false"
            android:textColor="#000000"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/input_text_background"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center">

        <TextView
            android:id="@+id/dailyMeals_dinner_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="@string/dinner"
            android:textColor="@color/textColorDefault"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dailyMeals_dinner_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#37F269"
            android:text="@string/add"
            android:enabled="false"
            android:textColor="#000000"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
</LinearLayout>

